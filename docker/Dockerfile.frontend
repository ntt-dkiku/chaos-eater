# Dockerfile for ChaosEater Frontend (Vite)
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY ../chaos_eater/frontend/package*.json ./
RUN npm install

# Copy source files
COPY ../chaos_eater/frontend .

# Build for production
RUN npm run build

# Port settings
EXPOSE 3000

# Launch the dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]
