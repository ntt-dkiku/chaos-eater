# Dockerfile
FROM node:18-alpine

WORKDIR /app

# install dependencies based on package.json
COPY ../chaos_eater/frontend/package*.json ./
RUN npm install

# copy remaining source code
COPY ../chaos_eater/frontend ./

# port settings
EXPOSE 3000

# environment settings
ENV DISABLE_ESLINT_PLUGIN=true
ENV SKIP_PREFLIGHT_CHECK=true

# launch the server
CMD ["npm", "start"]